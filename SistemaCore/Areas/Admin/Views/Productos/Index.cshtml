
@{
    ViewData["Title"] = "Lista de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xl">

    <h1 class="mt-5 fw-bold text-center">Lista de Producto</h1>

    <div class="d-md-flex justify-content-md-end">
        <a asp-action="Crear" class="btn btn-primary"> <i class="fa-solid fa-circle-plus"></i> Nuevo Producto</a>
    </div>

    <div class="table-responsive mt-3 p-3 bg-white shadow rounded">
        <table id="tblDato" class="table table-striped w-100">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th class="text-end">Costo</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{

    <script src="~/js/producto.js"></script>
}

